    <% if( check  != 0 && check != 5){ %>
      <div class="modal1" id="myParagraph">
        <div class="modal__inner1">
          <div class="modal__header1">
            <p class="Log">Đăng nhập</p>
            <i class="fas fa-times"></i>
          </div>
          <div class="modal__body1">
            <form action="/action" method="POST">
              <input id="Sign-Log" class="input" type="text" name="Sign-Log" value="1">
                <label >Name:  </label>
                <input class="input" type="text" name="name" placeholder=" name"><br><br>
                <label >Email:  </label>
                <input class="input" type="email" name="email" placeholder=" mail@gmail.com"><br><br>
                <label >City:  </label>
                <input class="input" type="text" name="city" placeholder=" city"><br><br>
                <% if(check ==1){ %>
                    <p id="datacheck1">Tài khoản chưa tồn tại!</p>
                <% }else if(check ==2){ %>   
                  <p id="datacheck1">Chưa điền name!</p>
                <% }else if(check ==3){ %> 
                  <p id="datacheck1">Chưa điền email!</p>
                <% }else if(check ==4){ %> 
                  <p id="datacheck1">Chưa điền city!</p>
                <% }else if(check ==6){ %> 
                  <p id="datacheck1">email đã có!</p>
                <% } %> 
                <br><input class="button" type="submit" value="Submit">
                <button class="button" name="button" onclick="Log()" type="button">Sign-Up</button>
            </form>
        </div>
        <div class="modal__footer1">
          <button>Close</button>
        </div>
      </div>
    </div>
    <% } %>
    <div class="modal hide">
        <div class="modal__inner">
          <div class="modal__header">
            <p class="Log">Đăng nhập</p>
            <i class="fas fa-times"></i>
          </div>
          <div class="modal__body">
            <form action="/action" method="POST">
              <input id="Sign-Log" class="input" type="text" name="SignLog" value="1">
                <label >Name:</label>
