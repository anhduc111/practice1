                <input class="button" type="submit" value="Submit">
                <button class="button"  onclick="Log()" name="button" type="button">Sign-Up</button>
            </form>
        </div>
        <div class="modal__footer">
          <button>Close</button>
        </div>
      </div>
    </div>
    <% if(check==5 || check==7) { %>
      <div class="account hideAcc">
        <div class="account-inner">
